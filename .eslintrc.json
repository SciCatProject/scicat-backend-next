{
  "env": {
      "browser": false,
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
  },
  "extends": "eslint:recommended",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018
  },
  "rules": {
      "camelcase": "error",
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "no-unused-vars": [
          "error",
          {
              "vars": "all",
              "args": "after-used",
              "argsIgnorePattern": "^_",
              "ignoreRestSiblings": true
          }
      ],
      "object-curly-spacing": ["error", "always"],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "strict": "error"
  }
}