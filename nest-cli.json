{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "dtoFileNameSuffix": [
          ".dto.ts",
          "sample.schema.ts",
          "proposal.schema.ts",
          "measurement-period.schema.ts",
          "job.schema.ts"
        ],
        "introspectComments": true
      }
    }]
  }
}
