[
    {
        "type": "beautify",
        "create" : {
            "auth": {
                "auth" : "#all", // #all, Job 
                "field" : ""
            },
            "template": {
                "type": "object",
                "properties": {
                    "pids": {
                        "type": "array",
                        "items": { "type" : "string" }
                    }
                },
                "required": ["datasetIds"],
                "additionalProperties": false
            },        
            "actions": [
                {
                    "name": "no_action",
                    "template": {
                        "jobid": "{job.id}",
                        "pids": "{input.pids}"
                    }
                },
                {
                    "name": "submit",
                    "template": {
                        "jobid": "{job.id}",
                        "pids": "{input.pids}"
                    },
                    "method": {
                        "type": "url",
                        "url": "http://localhost/beautify",
                        "verb": "POST"
                    }
                }
            ]
        },
        "update" : {
            "auth": "#token",
            "status": {
                "allowed": [
                    "BEAUTIFIED",
                    "FAILED"
                ],
                "transitions": {
                    "CREATED": [
                        "BEAUTIFIED",
                        "FAILED"
                    ]
                }
            },
            "update" : {
                "method": {
                    "type": "url",
                    "url": "http://localhost:3000/jobs/statusUpdate",
                    "verb": "POST"
                },
                "template": {
                    "jobId": "<JOB_ID>",
                    "status": "<STATUS>",
                    "message": "<MESSAGE>"
                }
            },
            "actions": [
                {
                    "name": "no_action",
                    "template": {
                        "jobid": "{job.id}",
                        "pids": "{input.pids}"
                    }
                }                
            ]
        }
    }
]
