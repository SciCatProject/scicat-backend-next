{
  "configVersion": "v1.0 2024-03-01 6f3f38",
  "jobs": [
    {
      "jobType": "archive",
      "create": {
        "auth": "#all",
        "actions": [
          {
            "actionType": "log"
          },
          {
            "actionType": "url",
            "url": "http://localhost:3000/api/v3/health?jobid={{id}}",
            "headers": {
              "accept": "application/json"
            }
          },
          {
            "actionType": "rabbitmq",
            "hostname": "rabbitmq",
            "port": 5672,
            "username": "guest",
            "password": "guest",
            "exchange": "jobs.write",
            "queue": "client.jobs.write",
            "key": "jobqueue"
          }
        ]
      },
      "statusUpdate": {
        "auth": "archivemanager",
        "actions": [
          {
            "actionType": "rabbitmq",
            "hostname": "rabbitmq",
            "port": 5672,
            "username": "guest",
            "password": "guest",
            "exchange": "jobs.write",
            "queue": "client.jobs.write",
            "key": "jobqueue"
          }
        ]
      }
    },
    {
      "jobType": "public",
      "create": {
        "auth": "#all"
      },
      "statusUpdate": {
        "auth": "#all"
      }
    }
  ]
}
