{
  "configVersion": "v1.0 2024-03-01 6f3f38",
  "jobs": [
    {
      "jobType": "archive",
      "create": {
        "auth": "#all",
        "actions": [
          {
            "actionType": "log"
          },
          {
            "actionType": "url",
            "url": "http://localhost:3000/api/v3/health?jobid={{id}}",
            "headers": {
              "accept": "application/json"
            }
          },
          {
            "actionType": "email",
            "mailer": "smtp",
            "to": "{{job.contactEmail}}",
            "from": "someone",
            "subject": "[SciCat] Your {{job.type}} job was submitted successfully",
            "bodyTemplate": "some-file"
          }
        ]
      },
      "statusUpdate": {
        "auth": "archivemanager"
      }
    },
    {
      "jobType": "public",
      "create": {
        "auth": "#all"
      },
      "statusUpdate": {
        "auth": "#all"
      }
    }
  ]
}
