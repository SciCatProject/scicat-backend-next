{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testTimeout": 30000,
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!axios)/"],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
