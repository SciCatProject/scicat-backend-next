{
  "name": "Attachment",
  "description": "Small less than 16 MB attachments, envisaged for png/jpeg previews",
  "base": "Ownable",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "thumbnail": {
      "type": "string",
      "required": true,
      "description": "Contains a thumbnail preview in base64 encoded png format for a given dataset",
      "default": "retrieve"
    },
    "caption": {
      "type": "string",
      "description": "Attachment caption to show in catanie",
      "default": ""
    }
  },
  "validations": [],
  "relations": {
    "dataset": {
      "type": "belongsTo",
      "model": "Dataset",
      "foreignKey": ""
    },
    "sample": {
      "type": "belongsTo",
      "model": "Sample",
      "foreignKey": ""
    },
    "proposal": {
      "type": "belongsTo",
      "model": "Proposal",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "proposalingestor",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "archivemanager",
      "permission": "DENY",
      "property": ["create", "patchOrCreate", "patchAttributes", "updateAll"]
    }
  ],
  "methods": {}
}
