{
    "name": "Instrument",
    "description": "Stores metadata information for an instrument",
    "base": "PersistedModel",
    "idInjection": false,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "pid": {
            "type": "string",
            "id": true,
            "description": "Persistent Identifier derived from UUIDv4",
            "defaultFn": "uuidv4"
        },
        "name": {
            "type": "string",
            "required": true
        },
        "customMetadata": {
            "type": "object"
        }
    },
    "validations": [],
    "relations": {
        "datasets": {
            "type": "hasMany",
            "model": "Dataset",
            "foreignKey": ""
        }
    },
    "acls": [
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY"
        },
        {
            "accessType": "READ",
            "principalType": "ROLE",
            "principalId": "$authenticated",
            "permission": "ALLOW"
        },
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "admin",
            "permission": "ALLOW"
        },
        {
            "principalType": "ROLE",
            "principalId": "ingestor",
            "permission": "ALLOW",
            "property": ["create","patchOrCreate","patchAttributes", "updateAll"]
        }
    ],
    "methods": {}
}
